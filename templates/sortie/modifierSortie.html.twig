
{% extends 'base.html.twig' %}

{% block title %}Modifier une sortie{% endblock %}

{% block body %}
    <div class="fluid-container">

        <h1 class="page-title">Créer une sortie</h1>

        <div class="form-card">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}

            {{ form_start(sortieForm) }}

            <section class="form-section">
                <h2>Informations générales</h2>

                <div class="grid-2">
                    {{ form_row(sortieForm.nom) }}
                    {{ form_row(sortieForm.nbInscriptionMax) }}
                </div>

                <div class="grid-2">
                    {{ form_row(sortieForm.dateDebut) }}
                    {{ form_row(sortieForm.dateCloture) }}
                </div>

                <div class="grid-2">
                    {{ form_row(sortieForm.duree) }}
                </div>

                {{ form_row(sortieForm.description) }}
            </section>

            <section class="form-section">
                <h2>Localisation</h2>

                <div class="grid-3">
                    {{ form_row(sortieForm.villeOrganisatrice) }}
                    {{ form_row(sortieForm.noVilles) }}

                    <div class="field-with-button">
                        {{ form_row(sortieForm.noLieux) }}
                        <a href="{{ path('lieu_new') }}" target="_blank" class="btn-add-lieu">+</a>
                    </div>
                </div>

                <div class="grid-2">
                    {{ form_row(sortieForm.rue) }}
                    {{ form_row(sortieForm.codePostal) }}
                </div>

                <div class="grid-2">
                    {{ form_row(sortieForm.latitude) }}
                    {{ form_row(sortieForm.longitude) }}
                </div>
            </section>

            <div class="submit-container">
                {{ form_widget(sortieForm.enregistrer) }}

                {#                {{ form_widget(sortieForm.annuler) }}#}

                {{ form_widget(sortieForm.publier, {'attr': {'style': 'display:none'}}) }}

                <a href="{{ path('sortie', { id: sortie.id }) }}" class="btn-primary ">
                    Annuler
                </a>
                {# Bouton supprimer simple #}
                <a href="{{ path('sortie_delete', {'id': sortie.id}) }}"
                   class="btn-danger"
                   onclick="return confirm('Voulez-vous vraiment supprimer cette sortie ?');">
                    Supprimer
                </a>
            </div>


            {{ form_end(sortieForm) }}
        </div>
    </div>




    <script>
        const villeSelect = document.querySelector('#sorties_noVilles');
        const lieuSelect = document.querySelector('#sorties_noLieux');

        const rueField = document.querySelector('#sorties_rue');
        const cpField = document.querySelector('#sorties_codePostal');
        const latField = document.querySelector('#sorties_latitude');
        const lonField = document.querySelector('#sorties_longitude');

        function resetLieuFields() {
            lieuSelect.innerHTML = '<option value="">Choisir un lieu</option>';
            rueField.value = '';
            cpField.value = '';
            latField.value = '';
            lonField.value = '';
        }

        villeSelect.addEventListener('change', function () {
            resetLieuFields();
            if (!this.value) return;

            fetch('/ajax/lieux/' + this.value)
                .then(r => r.json())
                .then(data => {
                    data.forEach(lieu => {
                        lieuSelect.innerHTML += `<option value="${lieu.id}">${lieu.nom}</option>`;
                    });
                });
        });

        lieuSelect.addEventListener('change', function () {
            if (!this.value) {
                resetLieuFields();
                return;
            }

            fetch('/ajax/lieu/' + this.value)
                .then(r => r.json())
                .then(data => {
                    rueField.value = data.rue ?? '';
                    cpField.value = data.cp ?? '';
                    latField.value = data.latitude ?? '';
                    lonField.value = data.longitude ?? '';
                });
        });

        // Pré-remplissage si un lieu est déjà sélectionné (mode édition)
        if (lieuSelect.value) {
            fetch('/ajax/lieu/' + lieuSelect.value)
                .then(r => r.json())
                .then(data => {
                    rueField.value = data.rue ?? '';
                    cpField.value = data.cp ?? '';
                    latField.value = data.latitude ?? '';
                    lonField.value = data.longitude ?? '';
                });
        }



    </script>


    <style>

        /* --- PAGE STRUCTURE --- */
        .page-title {
            text-align: center;
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 30px;
            color: #2c3e50;
        }

        /* --- CARD --- */
        .form-card {
            background: #ffffff;
            padding: 30px;
            border-radius: 14px;
            box-shadow: 0 4px 25px rgba(0,0,0,0.08);
            border: 1px solid #e8e8e8;
        }

        /* --- SECTION TITLES --- */
        .form-section {
            margin-bottom: 35px;
        }

        .form-section h2 {
            font-size: 1.25rem;
            margin-bottom: 15px;
            color: #34495e;
            border-left: 4px solid #3498db;
            padding-left: 10px;
            font-weight: 500;
        }

        /* --- GRID SYSTEM --- */
        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .grid-3 {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 20px;
        }

        /* --- FORM FIELDS --- */
        form div {
            margin-bottom: 10px;
        }

        input, select, textarea {
            width: 100%;
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #d0d0d0;
            font-size: 1rem;
            transition: border-color 0.2s ease;
        }

        input:focus, select:focus, textarea:focus {
            border-color: #3498db;
            outline: none;
            box-shadow: 0 0 0 2px rgba(52,152,219,0.15);
        }

        label {
            font-weight: 500;
            margin-bottom: 5px;
            display: block;
            color: #2c3e50;
        }

        /* --- ADD LIEU BUTTON --- */
        .field-with-button {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .btn-add-lieu {
            background: #2ecc71;
            color: white;
            font-size: 1.4rem;
            width: 38px;
            height: 38px;
            border-radius: 6px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            cursor: pointer;
            transition: 0.2s ease;
        }

        .btn-add-lieu:hover {
            background: #27ae60;
        }

        /* --- SUBMIT BUTTONS --- */
        .submit-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 25px;
        }

        .submit-container button {
            padding: 12px 25px;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            border: none;
        }

        /* Bouton ENREGISTRER */
        button[name="sorties[enregistrer]"] {
            background: #3498db;
            color: white;
        }

        /* Bouton PUBLIER */
        button[name="sorties[publier]"] {
            background: #2ecc71;
            color: white;
        }

        /* Bouton ANNULER */
        button[name="sorties[annuler]"] {
            background: #e74c3c;
            color: white;
        }
        #sorties_enregistrer {
            background: #3498db;
            color: white;
        }

        #sorties_publier {
            background: #2ecc71;
            color: white;
        }

        #sorties_annuler {
            background: #e74c3c;
            color: white;
        }

        .btn-primary {
            padding: 12px 25px;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            border: none;
            background: #e74c3c;
            color: white;
        }

        .btn-danger {
            padding: 12px 25px;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            border: none;
            background: #e74c3c;
            color: white;
            text-decoration: none;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            transition: 0.2s ease;
        }

        .btn-danger:hover {
            background: #c0392b;
        }

    </style>



{% endblock %}







































