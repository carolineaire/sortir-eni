{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sorti{% endblock %}</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <a class="logo" href="/">
            <img src="{{ asset('images/logo.png') }}" alt="Logo Sorti">
        </a>
        <div class="nav-links">
            <a href="#">Villes</a>
            <a href="#">Sites</a>
            <a href="#">Accueil</a>
            <a href="{{ path('app_profil') }}">Mon profil</a>
            <a href="#" class="nav-logout">Déconnexion</a>
        </div>
    </nav>

    {% block body %}{% endblock %}

    <footer>
        <p>© 2025 Sortie</p>
    </footer>
</body>
</html>