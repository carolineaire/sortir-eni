{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sorti{% endblock %}</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />


</head>
<body>
    {% if app.user %}
    <nav>
        <a class="logo" href="/">
            <img src="{{ asset('images/logo.png') }}" alt="Logo Sorti">
            <h1>Sortir.com</h1>
        </a>
        <div class="nav-links">
            <a href="{{ path('app_villes') }}">Villes</a>
            <a href="#">Sites</a>
            <a href="/">Accueil</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a  href="{{ path('app_register') }}">
                     Ajouter un compte
                </a>
            {% endif %}

            <a href="{{ path('lieu_new') }}">Lieux</a>
            <a href="{{ path('sortie_create') }}">Créer une sortie</a>
            <a href="{{ path('app_profil') }}">Mon profil</a>
            <a href="{{ path('app_logout') }}" class="nav-logout">Déconnexion</a>
        </div>
    </nav>
    {% endif %}

    <div class="page-container">
        <main class="content">
            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            <p>© 2025 Sortie.com | Fait avec ❤️ par Kati, Lukas et Caroline</p>
        </footer>
    </div>

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>
